{
  "name": "scene-it-root",
  "private": true,
  "workspaces": ["frontend"],
  "scripts": {
    "dev": "concurrently \"npm:dev:frontend\" \"npm:dev:backend\"",
    "dev:frontend": "npm --prefix frontend run dev",
    "build:frontend": "npm --prefix frontend run build",
    "start:frontend": "npm --prefix frontend run start",
    "dev:backend": "backend/.venv/bin/python -m uvicorn app.main:app --reload --port 8000 --app-dir backend"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
